{
    "name": "lwc-test-creator",
    "publisher": "MaxGoldfarb",
    "displayName": "LWC Test Creator",
    "description": "Quickly create boilerplate Jest tests for Salesforce Lightning Web Components (LWC)",
    "icon": "images/testCreator.png",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:lwc-test-creator.createJestTest"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "lwc-test-creator.createJestTest",
                "title": "LWC Test Creator: Create Jest Test"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint"
    },
    "devDependencies": {
        "@types/vscode": "^1.56.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    },
    "dependencies": {
        "text-encoding-polyfill": "^0.6.7"
    }
}